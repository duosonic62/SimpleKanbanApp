<%= form_for @user, :url => {:action => :create} do |f| %>

    <%= f.label :name %><br />
    <%= f.text_field :name %>

    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>

    <%= f.label :password %><br />
    <%= f.text_field :password %>

    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>

    <%= f.submit '登録' %>
<% end %>